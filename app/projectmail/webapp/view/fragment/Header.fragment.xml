<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <Shell>
        <Panel>
            <content>
                <Input
                    editable="{Header>/Input/editable}"
                    change="onChange"
                    value="{Header>/Input/value1}"
                    maxLength="30%"
                /> 

                <Button text="Submit" class="myButton" press="onSubmit" ></Button>
            </content>
        </Panel>
    </Shell>
</core:FragmentDefinition>
