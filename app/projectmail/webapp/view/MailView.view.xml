<mvc:View
    xmlns:cards="sap.f.cards"
    controllerName="projectmail.controller.MailView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <Shell>
            <Panel>
                    <core:Fragment
                        fragmentName="projectmail.view.fragment.Header"
                    />
                <content>
                    <core:Fragment
                        fragmentName="projectmail.view.fragment.Create"
                    />
                </content>
            </Panel>
        </Shell>
    </Page>
</mvc:View>
